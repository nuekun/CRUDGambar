<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootGambar"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:background="@color/browser_actions_bg_grey">

    <ImageView
        android:id="@+id/gbrGambarPriview"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="0dp"
        android:scaleType="center"
        app:srcCompat="@color/browser_actions_title_color" />

    <TextView
        android:id="@+id/txtGambarNama"
        android:layout_width="259dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/gbrGambarPriview"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="31dp"
        android:layout_marginEnd="21dp"
        android:layout_marginBottom="38dp"
        android:layout_toEndOf="@+id/gbrGambarPriview"
        android:text="Nama"
        android:textAlignment="textStart"
        android:textSize="24sp"
        android:textStyle="bold" />
</RelativeLayout>